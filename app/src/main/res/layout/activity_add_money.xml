<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMoneyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:title="Add Money"
        >

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="109dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="111dp"
        android:text="Bank Name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="96dp"
        android:layout_height="59dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="0dp"
        android:layout_marginTop="29dp"
        android:text="Enter last 6 digits of atm card" />

    <Spinner
        android:id="@+id/spinner"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_width="191dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="-13dp"
        android:autofillHints="Select Bank"
        android:backgroundTint="@color/green"
        android:padding="15dp" />

    <EditText
        android:id="@+id/atmNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/textView5"
        android:drawableLeft="@drawable/cardicon"
        android:ems="10"
        android:hint="Please provide dummy data"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/et"
        android:layout_width="97dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="268dp"
        android:text="Add Amount" />

    <EditText
        android:id="@+id/amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/atmNo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="6dp"
        android:layout_toEndOf="@+id/et"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/borderless_colored"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginBottom="124dp"
        android:text="Request" />

</RelativeLayout>