<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/linear_w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="4dp"
        >

        <LinearLayout
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/recent_model"
                android:textSize="15dp"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="CAR MODEL"
                android:textColor="@color/header"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/recent_location"
                android:textSize="15dp"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="LOCATION"
                android:textColor="@color/header"/>
        </LinearLayout>

        <View
            android:id="@+id/SplitLin"
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:background="@color/lightwhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/recent_img"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_margin="4dp"
                android:layout_height="match_parent"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <LinearLayout
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_width="match_parent"
                        android:weightSum="10"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_weight="5"
                        android:id="@+id/recent_pickup_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="center"
                        android:text="12-12-2018"/>
                    <TextView
                        android:layout_weight="5"
                        android:id="@+id/recent_pickup_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="12:43 PM"/>
                    </LinearLayout>
                <LinearLayout
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/recent_hours"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:drawableLeft="@drawable/ic_action_clock"
                        android:layout_marginLeft="2dp"
                        android:text="6 HOURS"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/recent_rent"
                        android:layout_width="0dp"
                        android:textSize="16dp"

                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center"

                        android:text=" $ 294"/>
                </LinearLayout>

                <View
                    android:id="@+id/SplitLine_hor"
                    android:layout_width="match_parent"
                    android:layout_height= "2dp"
                    android:background="@color/lightwhite" />

                <LinearLayout
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/recent_id"
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:text="Car No"/>
                    <TextView
                        android:id="@+id/recent_status"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="5"
                        android:text="Live"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height= "1dp"
            android:visibility="gone"
            android:background="@color/dark_gray" />
        <LinearLayout
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="END TRIP"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_margin="2dp"
                android:background="@color/green"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>